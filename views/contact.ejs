<!-- views/contact.ejs -->
<%- include("partials/header") %>

<!-- Toast Notification -->
<% if (success) { %>
  <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
    <div class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          ✅ Message sent successfully! We'll get back to you soon.
        </div>
      </div>
    </div>
  </div>
<% } else if (error) { %>
  <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
    <div class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          ❌ There was an error sending your message. Please try again later.
        </div>
      </div>
    </div>
  </div>
<% } %>


<section class="container py-5">
  <h2 class="text-center mb-4 page-section-heading">Contact Us</h2>

  <div class="row g-4">
    <div class="col-md-6">
      <div class="mb-3 d-flex align-items-start">
        <img src="https://res.cloudinary.com/djulyfaml/image/upload/q_auto,f_auto/v1751966731/Location_wz2z87.png" alt="Location Icon" width="30" class="me-3" loading="lazy">
        <p>28, Awanatu Street, Papa Ajao, Mushin, Lagos State</p>
      </div>
      <div class="mb-3 d-flex align-items-start">
        <img src="https://res.cloudinary.com/djulyfaml/image/upload/q_auto,f_auto/v1752053102/telephone-call_3059590_wfbf5c.png" alt="Phone Icon" width="30" class="me-3" loading="lazy">
        <p>+234 810 474 0000 <br> +234 706 779 1560</p>
      </div>
      <div class="mb-3 d-flex align-items-start">
        <img src="https://res.cloudinary.com/djulyfaml/image/upload/q_auto,f_auto/v1751966706/open-email-envelope_kdsmge.png" alt="Email Icon" width="30" class="me-3" loading="lazy">
        <p>fasdiagnostics1@gmail.com</p>
      </div>
      <div class="mb-4 d-flex align-items-start">
        <img src="https://res.cloudinary.com/djulyfaml/image/upload/q_auto,f_auto/v1751966766/time_oazl6a.png" alt="Time Icon" width="30" class="me-3" loading="lazy">
        <p>
          Monday - Saturday: 9am - 5pm <br>
        </p>
      </div>
      <a href="https://wa.me/2348104740000" target="_blank" class="btn btn-success">
        Chat with Us on WhatsApp
      </a>
    </div>

    <!-- Contact Form -->
    <div class="col-md-6">
      <form method="POST" action="/contact">
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">Phone Number</label>
          <input type="tel" class="form-control" id="phone" name="phone">
        </div>
        <div class="mb-3">
          <label for="message" class="form-label">Your Message</label>
          <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit Message</button>
      </form>
    </div>
  </div>

  <!-- Map Section -->
  <div class="mt-5">
    <h4 class="text-center mb-3">Visit Our Diagnostic Centre</h4>
    <div class="ratio ratio-16x9">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1983.9204243775373!2d3.342323877353096!3d6.536864122341047!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x103b8d31c5e49647%3A0x8bcfbfe60123e356!2s28%20Awanatu%20St%2C%20Papa%20Ajao%2C%20Lagos%20102215%2C%20Lagos!5e0!3m2!1sen!2sng!4v1720340458552!5m2!1sen!2sng"
        width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy">
      </iframe>
    </div>
  </div>
</section>

<%- include("partials/footer") %>
